      margin-top: 20px;
      padding: 16px;
      border-radius: 12px;
      background-color: #fef1f2;
      border: 1px solid #feecee;
      display: flex;
      align-items: flex-start;
    }

    .gift-card-balance-checker__error::before {
      content: '';
      display: block;
      width: 18px;
      height: a8px;
      background-color: #ff3b30;
      border-radius: 50%;
      margin-right: 10px;
      flex-shrink: 0;
      position: relative;
      top: 2px;
    }

    .gift-card-balance-checker__error-message {
      margin: 0;
      color: #95353c;
      font-size: 15px;
    }

