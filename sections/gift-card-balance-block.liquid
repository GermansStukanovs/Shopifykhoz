<div class="gift-card-balance-block">
  {% render 'gift-card-balance-form',
    title: block.settings.title,
    description: block.settings.description,
    button_text: block.settings.button_text,
    input_label: block.settings.input_label,
    input_placeholder: block.settings.input_placeholder,
    text_alignment: block.settings.text_alignment,
    margin_top: block.settings.margin_top,
    margin_bottom: block.settings.margin_bottom
  %}
</div>

{% schema %}
{
  "name": "Gift Card Balance Block",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Check Gift Card Balance",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Enter your gift card code to check the available balance.</p>",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "input_label",
      "default": "Gift Card Code",
      "label": "Input label"
    },
    {
      "type": "text",
      "id": "input_placeholder",
      "default": "Enter gift card code",
      "label": "Input placeholder"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Check Balance",
      "label": "Button text"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Text alignment"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 20
    }
  ]
}
{% endschema %}
